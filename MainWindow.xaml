        xmlns:local="clr-namespace:WpfAppTest5"
        mc:Ignorable="d"
        Title="TextToSQL" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="26">
            </ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
